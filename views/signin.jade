extends layout

block content

    if message  
       div.login-done.alert.alert-danger #{message}

    form.fo(action='/users/signin', method='post')
        .form-group
            label(for='username') user name :
            input.form-control(type='text', name='username', placeholder='enter your email')
        .form-group
            label(for='password') password :
            input.btn-dark.float-right(type='hidden', name='_csrf', value='#{csrfToken}')
            input.form-control(type='password', name='password', placeholder='enter your password')
        input.btn.btn-dark.float-right(type='submit', value='Sign in')